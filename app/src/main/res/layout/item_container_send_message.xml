<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_send_message">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_chat_send_bubble"
        android:padding="16dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:text="Hello Android"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message_time_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Yesterday"
        android:textAppearance="@style/TextAppearance.ChatApp.LabelSmall"
        android:textColor="@color/colorOnSecondary"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/tv_send_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_send_message" />

</androidx.constraintlayout.widget.ConstraintLayout>