<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@drawable/background_item_status">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/place_holder_image_list"
        android:layout_width="@dimen/image_list_item"
        android:layout_height="@dimen/image_list_item"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorOnSurfaceInverse"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/place_holder_t1_list"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@color/colorOnSurfaceInverse"
        android:textAppearance="@style/TextAppearance.ChatApp.BodyMedium"
        android:textColor="@color/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@+id/place_holder_image_list"
        app:layout_constraintEnd_toStartOf="@+id/place_holder_t4_list"
        app:layout_constraintStart_toEndOf="@+id/place_holder_image_list"
        app:layout_constraintTop_toTopOf="@+id/place_holder_image_list"
        app:layout_constraintVertical_chainStyle="packed" />


    <ImageButton
        android:id="@+id/place_holder_t4_list"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_item_status"
        android:textAppearance="@style/TextAppearance.ChatApp.Overline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>