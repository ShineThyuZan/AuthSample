<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:text="@string/edit_cover_photo"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.ChatApp.TitleMedium"
        android:textColor="@color/colorOnBackground" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_icon_camera"
        android:drawablePadding="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_8sdp"
        android:text="@string/camera"
        android:textAppearance="@style/TextAppearance.ChatApp.BodyMedium"
        android:textColor="@color/colorOnBackground" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_gallery"
        android:drawablePadding="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_8sdp"
        android:text="@string/gallery"
        android:textAppearance="@style/TextAppearance.ChatApp.BodyMedium"
        android:textColor="@color/colorOnBackground" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvRemove"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_recycler"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_8sdp"
        android:text="@string/remove"
        android:textAppearance="@style/TextAppearance.ChatApp.BodyMedium"
        android:textColor="@color/design_default_color_error" />


</LinearLayout>